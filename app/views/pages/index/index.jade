extends /base

block append css
  link(rel="stylesheet" href="assets/css/pages/index/index.css")

block container
  secion#app-container
  script(type="text/template")#app-template  
    aside.panel.panel-left.active
    aside.panel-content-container.panel.panel-right
  
  script(type="text/template")#new-event-template
    section.panel-content-container.form-container
      form.new-event-form
        div.field-container
          label= "Nome"
          div.input-container
            input(type="text", name="name")  
        div.field-container
          label= "Descrição"
          div.input-container
            input(type="text", name="description")  
        div.field-container
          label= "Preço"
          div.input-container
            input(type="text", name="price")  
        div.field-container
          label= "Data"
          div.input-container
            input(type="text", name="scheduled_date")  
        input(type="submit" value="Salvar").btn
  
  script(type="text/template")#events-list-template
    ul.events
    
  script(type="text/template")#event-template
    p.name!= '<%= name %>'
    p.description!= '<%= description %>'
    p.price!= '<%= price %>'
    p.date!= '<%= scheduled_date %>'
