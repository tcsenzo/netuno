@require '_partials/_variables'

body, html
  padding: 0
  margin: 0
  height: 100%

.page-wrapper
  height: 100%
.container
  position: relative
  height: 100%
.panel
  position: absolute
  background-color: #ccc
  height: 100%
  width: 50%
  box-sizing: border-box
  top: 0
  transition: all 0.2s ease
  padding: 15px 20px
  overflow: scroll
  &.active
    box-shadow: 0 0 15px #3c3c3c
    width: 75%
    z-index: 2
  &.panel-left
    left: 0
  &.panel-right
    right: 0
